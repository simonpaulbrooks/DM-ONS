---
apiVersion: "v1"
kind: "Namespace"
metadata:
  name: "testapp"
---
apiVersion: "apps/v1"
kind: "Deployment"
metadata:
  name: "nginx-1"
  namespace: "testapp"
  labels:
    testapp: "testnginx-1"
spec:
  replicas: 3
  selector:
    matchLabels:
      testapp: "testnginx-1"
  template:
    metadata:
      labels:
        testapp: "testnginx-1"
    spec:
      containers:
      - name: "nginx-1"
        image: "nginx:latest"
---
apiVersion: "autoscaling/v2beta1"
kind: "HorizontalPodAutoscaler"
metadata:
  name: "nginx-1-hpa-ltmb"
  namespace: "testapp"
  labels:
    testapp: "testnginx-1"
spec:
  scaleTargetRef:
    kind: "Deployment"
    name: "nginx-1"
    apiVersion: "apps/v1"
  minReplicas: 1
  maxReplicas: 5
  metrics:
  - type: "Resource"
    resource:
      name: "cpu"
      targetAverageUtilization: 80